# Calico Custom Resources Configuration
# This file is managed by Ansible - DO NOT EDIT MANUALLY
---
apiVersion: operator.tigera.io/v1
kind: Installation
metadata:
  name: default
spec:
  # Calico data plane configuration
  calicoNetwork:
    # Configure IP pools
    ipPools:
      - blockSize: {{ calico_ipv4_pool_block_size }}
        cidr: {{ calico_ipv4_pool_cidr }}
        encapsulation: {{ calico_encapsulation }}
        natOutgoing: Enabled
        nodeSelector: all()

  # CNI configuration
  cni:
    type: Calico
    ipam:
      type: Calico

  # Registry configuration (optional)
  registry: docker.io/

---
apiVersion: operator.tigera.io/v1
kind: APIServer
metadata:
  name: default
spec: {}
