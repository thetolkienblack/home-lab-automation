# Trivy Configuration File
# Generated by Ansible - DO NOT EDIT MANUALLY

# Cache directory
cache:
  dir: {{ trivy_cache_dir }}

# Database
db:
  repository: {{ trivy_db_repository }}
  skip-update: {{ trivy_skip_db_update | lower }}

# Scan settings
scan:
  skip-dirs: []
  skip-files: []
  offline-scan: {{ trivy_offline_mode | lower }}

# Vulnerability settings
vulnerability:
  type: {{ trivy_vuln_types | join(',') }}

# Report settings
format: {{ trivy_report_format }}
severity: {{ trivy_severity_levels | join(',') }}

# Exit code
exit-code: {{ trivy_exit_code }}

# Performance
timeout: {{ trivy_scan_timeout }}s

# Miscellaneous
quiet: false
no-progress: false
ignore-unfixed: {{ trivy_ignore_unfixed | lower }}
