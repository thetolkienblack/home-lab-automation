# Generated by Ansible - elk_stack role
# Heap size settings
-Xms{{ logstash_heap_size }}
-Xmx{{ logstash_heap_size }}

# GC configuration
-XX:+UseG1GC
-XX:G1ReservePercent=25
-XX:InitiatingHeapOccupancyPercent=30

# DNS cache policy
-Des.networkaddress.cache.ttl=60
-Des.networkaddress.cache.negative.ttl=10

# Pre-touch memory pages
-XX:+AlwaysPreTouch

# Heap dumps
-XX:+HeapDumpOnOutOfMemoryError
-XX:HeapDumpPath={{ logstash_data_dir }}

# GC logging
-Xlog:gc*,gc+age=trace,safepoint:file={{ logstash_log_dir }}/gc.log:utctime,level,tags:filecount=32,filesize=64m
