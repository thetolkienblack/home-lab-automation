# Generated by Ansible - elk_stack role
# Syslog input pipeline configuration

input {
  syslog {
    port => {{ logstash_syslog_port }}
    host => "{{ logstash_http_host }}"
  }
}

filter {
  # Parse syslog message
  grok {
    match => {
      "message" => "%{SYSLOGBASE} %{GREEDYDATA:syslog_message}"
    }
  }

  # Extract timestamp
  date {
    match => [ "timestamp", "MMM  d HH:mm:ss", "MMM dd HH:mm:ss" ]
    target => "@timestamp"
  }

  # Add metadata
  mutate {
    add_field => {
      "[@metadata][target_index]" => "syslog-%{+YYYY.MM.dd}"
      "log_source" => "syslog"
    }
    remove_field => [ "timestamp" ]
  }
}

output {
  elasticsearch {
    hosts => {{ logstash_elasticsearch_hosts | to_json }}
{% if elk_security_enabled %}
    user => "{{ logstash_elasticsearch_user }}"
    password => "{{ logstash_elasticsearch_password }}"
{% endif %}
    index => "%{[@metadata][target_index]}"
    manage_template => true
  }
}
