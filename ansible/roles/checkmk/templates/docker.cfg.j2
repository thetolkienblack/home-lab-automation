# CheckMK Docker Monitoring Configuration
# Generated by Ansible - Do not edit manually

# Docker API endpoint
# Default: unix://var/run/docker.sock
base_url: {{ checkmk_docker_api_endpoint }}

# Skip specific sections (comma-separated)
# Available sections: containers, images, networks, volumes, node_info, node_disk_usage
# skip_sections: images,volumes

# Container name filter (regex pattern)
# Only monitor containers matching this pattern
# container_id_filter: .*

# Include/exclude containers by label
# Example: label_filter_include: monitoring=true
# label_filter_include:
# label_filter_exclude:

# Timeout for API requests (seconds)
# timeout: 10

# TLS verification
# verify: false

# TLS certificate paths (if using TLS)
# cert: /path/to/cert.pem
# key: /path/to/key.pem

