// Grafana Alloy configuration file
// Generated by Ansible

// Logging configuration
logging {
  level  = "info"
  format = "logfmt"
}

{% if alloy_prometheus_remote_write_enabled %}
// Prometheus metrics collection
prometheus.scrape "default" {
  targets = [
    {"__address__" = "localhost:9090"},
  ]
  forward_to = [prometheus.remote_write.default.receiver]
}

// Prometheus remote write
prometheus.remote_write "default" {
  endpoint {
    url = "{{ alloy_prometheus_remote_write_url }}"
  }
}
{% endif %}

{% if alloy_loki_write_enabled %}
// Loki logs collection
loki.source.file "default" {
  targets = [
    {__path__ = "/var/log/*.log"},
  ]
  forward_to = [loki.write.default.receiver]
}

// Loki write
loki.write "default" {
  endpoint {
    url = "{{ alloy_loki_write_url }}"
  }
}
{% endif %}

{% if alloy_tempo_write_enabled %}
// Tempo traces collection
otelcol.receiver.otlp "default" {
  grpc {
    endpoint = "0.0.0.0:4317"
  }

  http {
    endpoint = "0.0.0.0:4318"
  }

  output {
    traces  = [otelcol.exporter.otlp.default.input]
  }
}

// Tempo OTLP exporter
otelcol.exporter.otlp "default" {
  client {
    endpoint = "{{ alloy_tempo_write_url }}"
  }
}
{% endif %}

{% if alloy_discovery_kubernetes_enabled %}
// Kubernetes service discovery
discovery.kubernetes "pods" {
  role = "pod"
}
{% endif %}

{% if alloy_discovery_docker_enabled %}
// Docker service discovery
discovery.docker "containers" {
  host = "unix:///var/run/docker.sock"
}
{% endif %}

{% if alloy_discovery_file_enabled %}
// File-based service discovery
discovery.file "targets" {
  files = [
    "{{ alloy_config_dir }}/targets/*.json",
    "{{ alloy_config_dir }}/targets/*.yml",
  ]
}
{% endif %}
