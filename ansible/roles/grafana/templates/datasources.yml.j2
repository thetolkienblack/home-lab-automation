# Grafana datasources provisioning
# Generated by Ansible

apiVersion: 1

datasources:
{% for datasource in grafana_datasources %}
{% if datasource.enabled | default(true) | bool %}
  - name: {{ datasource.name }}
    type: {{ datasource.type }}
    access: {{ datasource.access }}
    url: {{ datasource.url }}
    isDefault: {{ datasource.isDefault | default(false) | lower }}
    editable: {{ datasource.editable | default(true) | lower }}
{% if datasource.database is defined %}
    database: {{ datasource.database }}
{% endif %}
{% if datasource.jsonData is defined %}
    jsonData:
{% for key, value in datasource.jsonData.items() %}
      {{ key }}: {{ value }}
{% endfor %}
{% endif %}
{% if datasource.secureJsonData is defined %}
    secureJsonData:
{% for key, value in datasource.secureJsonData.items() %}
      {{ key }}: {{ value }}
{% endfor %}
{% endif %}
{% endif %}
{% endfor %}

{% for datasource in grafana_additional_datasources %}
  - name: {{ datasource.name }}
    type: {{ datasource.type }}
    access: {{ datasource.access }}
    url: {{ datasource.url }}
    isDefault: {{ datasource.isDefault | default(false) | lower }}
    editable: {{ datasource.editable | default(true) | lower }}
{% if datasource.database is defined %}
    database: {{ datasource.database }}
{% endif %}
{% if datasource.jsonData is defined %}
    jsonData:
{% for key, value in datasource.jsonData.items() %}
      {{ key }}: {{ value }}
{% endfor %}
{% endif %}
{% if datasource.secureJsonData is defined %}
    secureJsonData:
{% for key, value in datasource.secureJsonData.items() %}
      {{ key }}: {{ value }}
{% endfor %}
{% endif %}
{% endfor %}
