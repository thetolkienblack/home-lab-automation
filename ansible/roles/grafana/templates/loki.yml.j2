# Loki configuration file
# Generated by Ansible

auth_enabled: false

server:
  http_listen_address: {{ loki_http_listen_address }}
  http_listen_port: {{ loki_http_listen_port }}
  grpc_listen_port: {{ loki_grpc_listen_port }}
  log_level: info

common:
  path_prefix: {{ loki_data_dir }}
  storage:
    filesystem:
      chunks_directory: {{ loki_storage_filesystem_directory }}
      rules_directory: {{ loki_rules_dir }}
  replication_factor: 1
  ring:
    kvstore:
      store: inmemory

schema_config:
  configs:
    - from: 2020-10-24
      store: boltdb-shipper
      object_store: filesystem
      schema: v11
      index:
        prefix: index_
        period: 24h

storage_config:
  boltdb_shipper:
    active_index_directory: {{ loki_data_dir }}/boltdb-shipper-active
    cache_location: {{ loki_data_dir }}/boltdb-shipper-cache
    cache_ttl: 24h
    shared_store: filesystem
  filesystem:
    directory: {{ loki_storage_filesystem_directory }}

compactor:
  working_directory: {{ loki_data_dir }}/retention
  shared_store: filesystem
{% if loki_retention_enabled %}
  compaction_interval: 10m
  retention_enabled: {{ loki_retention_enabled | lower }}
  retention_delete_delay: 2h
  retention_delete_worker_count: 150
{% endif %}

limits_config:
  reject_old_samples: {{ loki_limits_reject_old_samples | lower }}
  reject_old_samples_max_age: {{ loki_limits_reject_old_samples_max_age }}
  ingestion_rate_mb: {{ loki_limits_ingestion_rate_mb }}
  ingestion_burst_size_mb: {{ loki_limits_ingestion_burst_size_mb }}
  max_streams_per_user: {{ loki_limits_max_streams_per_user }}
  max_global_streams_per_user: {{ loki_limits_max_global_streams_per_user }}
{% if loki_retention_enabled %}
  retention_period: {{ loki_retention_period }}
{% endif %}

chunk_store_config:
  max_look_back_period: 0s

table_manager:
{% if loki_retention_enabled %}
  retention_deletes_enabled: true
  retention_period: {{ loki_retention_period }}
{% else %}
  retention_deletes_enabled: false
{% endif %}

ruler:
  storage:
    type: local
    local:
      directory: {{ loki_rules_dir }}
  rule_path: {{ loki_data_dir }}/rules-temp
  alertmanager_url: http://localhost:9093
  ring:
    kvstore:
      store: inmemory
  enable_api: true
